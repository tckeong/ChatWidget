enum ConversationType   { 
  DIRECT 
  SUPPORT_ROOM 
  COMMUNITY 
}

enum ParticipantRole    { 
  CUSTOMER 
  AGENT 
  OWNER           
}

enum MessageContentType { 
  TEXT  
  FILE  
  IMAGE  
  VIDEO  
  OTHER 
}

